/* pages/movies/movie-detail/movie-detail.wxss */
@import "../stars-template/stars-template.wxss";
@import "../movie-temlate/movie-temlate.wxss";
.top-img {
  width: 100%;  
  max-height: 350rpx; 
  position: relative;
  filter: blur(5px);  /* 毛玻璃效果 */
}

.top-text {
  display: flex;
  flex-direction: column;
  position: absolute;
  top: 50rpx;
  left: 20rpx;
}

.film-name {
  margin-bottom: 20rpx;
  font-size: 45rpx;
  color: #fff;
}

.film-address-time {
  margin-bottom: 50rpx;
  font-size: 35rpx;
  color: #fff;
}

.film_like-comment {
  color: red;
  font-size: 30rpx;
}

.film_like {
 margin-right: 50rpx;
}

.film-comment {
  color: #666;
  margin-left: 30rpx;
}

.film-img {
  width: 200rpx;
  height: 250rpx;
  position: absolute;
  right: 30rpx;
  top: 200rpx;
}

.middle {
  display: flex;
  flex-direction: column;
  padding: 20rpx;
  line-height: 60rpx;
  box-sizing: border-box;
  font-size: 30rpx;
  color: #666;
}

.middle-filmname {
  margin: 20rpx 0;
  font-size: 40rpx;
  color: #000;
}

.middle-score {
  display: flex;
}

.space {
  margin-right: 30rpx;
  font-size: 30rpx;
}

.line {
  width: 100%;
  height: 1rpx;
  margin: 40rpx 0;
  background: #999;
}

.summary {
  display: flex;
  flex-direction: column;
  padding: 20rpx;
  box-sizing: border-box;
  line-height: 50rpx;
  color: #666;
  font-size: 30rpx;
}

.summary-content {
  margin-top: 20rpx;
  text-indent: 2em;
}

.performer-info {
  padding: 20rpx;
  box-sizing: border-box;
  color: #666;
  font-size: 30rpx;
}

.casts-info {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  margin-top: 40rpx;
}